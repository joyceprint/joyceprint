@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="home" class="col-xs-12 bg-danger center-block">
    <div id="jp-carousel" class="carousel slide" data-ride="carousel">

        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#jp-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#jp-carousel" data-slide-to="1"></li>
            <li data-target="#jp-carousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <!--
        ToDo
        Use a razor for loop here
        Load the images from the config file web config
        In .net core the json file will be used and creating custom config sections is no longer required
        -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img alt="First slide" class="center-block img-responsive" src="http://placehold.it/1200x675&text=First+slide">
                <div class="carousel-caption">
                    <h3>Caption heading 1</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
            </div>
            <div class="item">
                <img alt="Second slide" class="center-block img-responsive" src="http://placehold.it/1200x675&text=Second+slide">
                <div class="carousel-caption">
                    <h3>Caption heading 2</h3>
                    <p>Morbi eget libero quis metus consectetur semper.</p>
                </div>
            </div>
            <div class="item">
                <img alt="Third slide" class="center-block img-responsive" src="http://placehold.it/1200x675&text=Third+slide">
                <div class="carousel-caption">
                    <h3>Caption heading 3</h3>
                    <p>Suspendisse ullamcorper massa eget eleifend iaculis.</p>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#jp-carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#jp-carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>

<div class="clearfix"></div>

<section id="home-information" class="col-xs-12">
    <div class="row">
        <section id="home-products" class="col-xs-4 bg-info">
            <div class="panel panel-info">
                <div class="panel-heading">Products Offered</div>
                <div class="panel-body">
                    Docket Books <br />
                    Business Cards <br />
                    Letterheads <br />
                    Brouchers <br />
                </div>
            </div>
        </section>

        <section id="home-paper-sizes" class="col-xs-4 bg-danger">
            <div class="panel panel-danger">
                <div class="panel-heading">Paper Sizes</div>
                <div class="panel-body">
                    A4 <br />
                    A5 <br />
                    A6 <br />
                </div>
            </div>
        </section>

        <section id="home-services" class="col-xs-4 bg-success">
            <div class="panel panel-success">
                <div class="panel-heading">Services Offered</div>
                <div class="panel-body">
                    Design <br />
                    Printing <br />
                    Finishing <br />
                </div>
            </div>
        </section>
    </div>
</section>
