@{
    ViewBag.Title = "Quote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="getquote" class="col-xs-12">

    <div class="text-center jp-delivery">
        <h1 class="text-danger text-weight-900">
            Delivery to Ireland & The UK
        </h1>
    </div>

    <div class="row">
        <div class="col-sm-5 col-sm-offset-1 col-md-5 col-md-offset-1 col-lg-4 col-lg-offset-1">
            <article id="information">
                <div class="panel panel-warning">
                    @*<div class="panel-heading text-weight-900 text-center">
                        <h3 class="panel-title">
                            Helpful Information
                        </h3>
                    </div>*@
                    <div class="panel-body">
                        <div class="panel-heading text-weight-700">
                            Size
                        </div>
                        <ul>
                            <li><span class="text-danger">A4</span> - 210 x 297mm</li>
                            <li><span class="text-danger">A5</span> - Half A4 - 148.5 x 210mm</li>
                            <li><span class="text-danger">A6</span> - Quarter A4 - 105 x 148.5mm</li>
                            <li><span class="text-danger">DL</span> - Third A4 - 99 x 210mm</li>
                        </ul>

                        <div class="panel-heading text-weight-700">
                            Orientation
                        </div>
                        <ul>
                            <li>A6 - Shape: Protrait Size: 105 x 148.5mm</li>
                            <li>A6 - Shape: Landscape Size: 148.5 x 105mm</li>
                            <li>DL - Shape: Protrait Size: 99 x 210mm</li>
                            <li>DL - Shape: Landscape Size: 210 x 99mm</li>
                            <li>A5 - Shape: Protrait Size: 148.5 x 210mm</li>
                            <li>A5 - Shape: Landscape Size: 210 x 148.5mm</li>
                            <li>A4 - Shape: Protrait Size: 210 x 297mm</li>
                            <li>A4 - Shape: Landscape Size: 297 x 210mm</li>
                            <li>A3 - Shape: Landscape Size: 400 x 297mm</li>
                        </ul>

                        <div class="panel-heading text-weight-700">
                            Type of Book
                        </div>
                        <ul>
                            <li><span>Duplicate</span> (2 sheets in a Set - <span class="text-danger">100</span> sets per book)</li>
                            <li><span>Triplicate</span> (3 sheets in a Set - <span class="text-danger">50</span> sets per book)</li>
                            <li><span>Quad</span> (4 sheets in a Set - <span class="text-danger">50</span> sets per book)</li>
                        </ul>
                    </div>
                </div>
            </article>
        </div>

        <div class="col-sm-6 col-md-6 col-lg-6">
            <form action="/Quote/Index" method="post" class="form-horizontal">

                <div id="contactUs" class="jp-contact-information">
                    <h3 class="text-primary text-weight-700">Contact Information</h3>

                    <div class="form-group">
                        <label class="sr-only" for="form-group-input-company">Company</label>
                        <div class="col-sm-5">
                            <input type="text" inputmode="latin-prose" class="form-control" id="form-group-input-company" placeholder="Company" maxlength="150" autofocus required>
                        </div>

                        <label class="sr-only" for="form-group-input-position">Position</label>
                        <div class="col-sm-5">
                            <input type="text" inputmode="latin-prose" class="form-control" id="form-group-input-position" placeholder="Position" maxlength="150" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="sr-only" for="form-group-input-name">Name</label>
                        <div class="col-sm-5">
                            <input type="text" inputmode="latin-name" class="form-control" id="form-group-input-name" placeholder="Name" maxlength="150" required>
                        </div>

                        <label class="sr-only" for="form-group-input-telephone">Telephone Number</label>
                        <div class="col-sm-5">
                            <input type="tel" inputmode="tel" class="form-control" id="form-group-input-telephone" placeholder="000-0000000" maxlength="10" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="sr-only" for="form-group-input-email">Email</label>
                        <div class="col-sm-10">
                            <input type="email" inputmode="email" class="form-control" id="form-group-input-email" placeholder="your@email.com" maxlength="254" required>
                        </div>
                    </div>                    
                </div>

                <div class="clearfix"></div>

                <div>
                    <h3 class="text-primary text-weight-700">Product Information</h3>

                    <div class="form-group">
                        <label class="sr-only" for="form-group-input-docketbook-type">Docket Type</label>
                        <div class="col-sm-4">
                            <select class="form-control" name="form-group-input-docketbook-type" required>
                                <option value="None">
                                    Type
                                </option>
                                <option value="Duplicate">Duplicate</option>
                                <option value="Triplicate">Triplicate</option>
                                <option value="Quad">Quad</option>
                            </select>
                        </div>

                        <label class="sr-only" for="form-group-input-docketbook-size">Docket Size</label>
                        <div class="col-sm-3">
                            <select class="form-control" name="form-group-input-docketbook-size" required>
                                <option value="None">Size</option>
                                <option value="A4">A4</option>
                                <option value="A5">A5</option>
                                <option value="A6">A6</option>
                                <option value="DL">DL</option>
                            </select>
                        </div>
                        
                        <label class="sr-only" for="form-group-input-docketbook-quantity">Quantity</label>
                        <div class="col-sm-3">
                            <input type="number" inputmode="numeric" class="form-control" id="form-group-input-docketbook-quantity" placeholder="Quantity" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="sr-only" for="form-group-input-message">Message</label>
                        <!-- TODO: Have the right side border here transition into the background so we can't see where the lines are?-->
                        <div class="col-sm-10 col-md-10 col-lg-10">
                            <textarea rows="10" class="form-control" id="form-group-input-message" placeholder="Any additional information" wrap="hard" required></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4 col-sm-offset-1">
                                <button class="btn btn-warning form-control" type="reset">CLEAR</button>
                            </div>
                            <div class="col-sm-4">
                                <button class="btn btn-success form-control" formmethod="post" type="submit">SUBMIT</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>

</section>