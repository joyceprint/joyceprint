@{
    ViewBag.Title = "Quote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="quote" class="col-xs-12">

    <div class="text-center">
        <h1 class="text-danger text-weight-900">
            Delivery To Ireland & The UK
        </h1>
    </div>

    <div class="row row-vertical-align">
        
        <div class="col-xs-12 col-sm-6 col-md-5 col-md-offset-1 col-lg-4 col-lg-offset-1">
            @Html.Partial("DocketHelp")
        </div>

        <div class="col-sm-6 col-md-6 col-lg-6">
            <form action="/Quote/DocketBook" method="post" class="form-horizontal">
                @Html.Partial("PersonalForm")

                <div class="clearfix"></div>

                @Html.Partial("DocketForm")

                <div class="col-sm-5 col-sm-offset-1">
                    <div class="form-group">
                        <div class="col-xs-12">
                            <button class="btn btn-warning form-control" type="reset">CLEAR</button>
                        </div>
                    </div>
                </div>

                <div class="col-sm-5">
                    <div class="form-group">
                        <div class="col-xs-12">
                            <button class="btn btn-success form-control" formmethod="post" type="submit">SUBMIT</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>