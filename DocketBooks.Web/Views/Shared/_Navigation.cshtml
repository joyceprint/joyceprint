@{
    var hideNav = TempData["HideNavMenuOnError"] == null ? false : (bool)TempData["HideNavMenuOnError"];
}
<div class="navbar-fixed">
    <nav data-test-nav>
        <div class="nav-wrapper">
            @* ReSharper disable once Html.IdNotResolved *@
            <a href="#!" class="brand-logo cursor-default">
                @Html.Image(new { src = "/Content/images/db-logo-rbg.png", id = "logo", alt = "Docket Books Logo", data_test_nav_logo = "" })
            </a>

            @* ReSharper disable once Html.IdNotResolved *@
            <a href="#!" data-activates="nav-mobile" class="button-collapse" data-test-side-nav-menu>
                <i class="material-icons primary-text">menu</i>
            </a>

            @if (!hideNav)
            {
                <ul id="nav" class="right hide-on-med-and-down">
                    <li name="liHome">
                        <a href="#home" data-test-nav-home class="gtm-menu">Home</a>
                    </li>                                        
                    <li name="liContactUs">
                        <a href="http://joyceprint.ie/#quote" data-test-nav-contactus class="gtm-menu">Contact Us</a>
                    </li>
                    <li name="liMainSite">
                        <a href="http://joyceprint.ie" data-test-nav-mainsite class="gtm-menu">Main Site</a>
                    </li>
                </ul>
            }
        </div>
    </nav>
</div>
@if (!hideNav)
{
    <!-- This needs to be outside the navbar-fixed container or the z-indexes will get screwed up -->
    <ul id="nav-mobile" class="side-nav">
        <li name="liHome">
            <a href="#home" data-test-side-nav-home class="gtm-menu">Home</a>
        </li>
        <li name="liContactUs">
            <a href="http://joyceprint.ie/#quote" data-test-side-nav-contactus class="gtm-menu">Contact Us</a>
        </li>
        <li name="liMainSite">
            <a href="http://joyceprint.ie" data-test-side-nav-aboutus mainsite="gtm-menu">Main Site</a>
        </li>        
    </ul>
}