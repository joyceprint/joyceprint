@using JoycePrint.Domain.Mail

<!DOCTYPE html>
<html>
<head id="headMaster">

    <!-- Set the encoding to UTF-8 -->
    <meta charset="utf-8" />

    <!-- Tells IE to use it's Edge rendering engine -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Ensures proper rendering and touch zooming -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- This line allows sub pages to omit the Header section -->
    @RenderSection("head", false)

    <!-- Normal browser style sheet links -->
    @Styles.Render("~/css/joyceprintcss")

    <link rel="shortcut icon" href="@Url.Content("~/Content/favicon/favicon.ico")" />

    <link rel="icon" sizes="16x16 32x32 64x64" href="@Url.Content("~/Content/favicon/favicon.ico")" />
    <link rel="icon" type="image/png" sizes="196x196" href="@Url.Content("~/Content/favicon/favicon-192.png")" />
    <link rel="icon" type="image/png" sizes="160x160" href="@Url.Content("~/Content/favicon/favicon-160.png")" />
    <link rel="icon" type="image/png" sizes="96x96" href="@Url.Content("~/Content/favicon/favicon-96.png")" />
    <link rel="icon" type="image/png" sizes="64x64" href="@Url.Content("~/Content/favicon/favicon-64.png")" />
    <link rel="icon" type="image/png" sizes="32x32" href="@Url.Content("~/Content/favicon/favicon-32.png")" />
    <link rel="icon" type="image/png" sizes="16x16" href="@Url.Content("~/Content/favicon/favicon-16.png")" />

    <link rel="apple-touch-icon" href="@Url.Content("~/Content/favicon/favicon-57.png")" />
    <link rel="apple-touch-icon" sizes="114x114" href="@Url.Content("~/Content/favicon/favicon-114.png")" />
    <link rel="apple-touch-icon" sizes="72x72" href="@Url.Content("~/Content/favicon/favicon-72.png")" />
    <link rel="apple-touch-icon" sizes="144x144" href="@Url.Content("~/Content/favicon/favicon-144.png")" />
    <link rel="apple-touch-icon" sizes="60x60" href="@Url.Content("~/Content/favicon/favicon-60.png")" />
    <link rel="apple-touch-icon" sizes="120x120" href="@Url.Content("~/Content/favicon/favicon-120.png")" />
    <link rel="apple-touch-icon" sizes="76x76" href="@Url.Content("~/Content/favicon/favicon-76.png")" />
    <link rel="apple-touch-icon" sizes="152x152" href="@Url.Content("~/Content/favicon/favicon-152.png")" />
    <link rel="apple-touch-icon" sizes="180x180" href="@Url.Content("~/Content/favicon/favicon-180.png")" />

    <meta name="msapplication-TileColor" content="#FFFFFF" />
    <meta name="msapplication-TileImage" content="@Url.Content("~/Content/favicon/favicon-144.png")" />
    <meta name="msapplication-config" content="@Url.Content("~/Content/favicon/browserconfig.xml")" />

    <!-- Incuding the materialize icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <title>@ViewBag.Title</title>
    
    <meta name="description" content="Get a great price from JoycePrint on trade docket books and other print trade items">

    @{
        var action = ViewContext.RouteData.Values["action"]?.ToString();
    }

</head>
<body>

    @if (!string.Equals(action, Email.EmailView, StringComparison.OrdinalIgnoreCase))
    {
        @Html.Partial("_Header")
    }

    <main>
        @RenderBody()
    </main>

    @if (!string.Equals(action, Email.EmailView, StringComparison.OrdinalIgnoreCase))
    {
        @Html.Partial("_Footer")
    }

    <!-- This is the overlay that will be used to hide the screen while the loading icon is active -->
    <div id="loader-overlay"></div>

    @Scripts.Render("~/js/joyceprintjs")

</body>
</html>