@using JoycePrint.Web

@{
    ViewBag.Title = "About Us";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    BundleConfig.UpdateScriptBundle(BundleTable.Bundles.GetBundleFor("~/js/joyceprintjs"), BundleConfig.PageBundle.AboutUs);
}

<section id="aboutus" role="main" class="bg-light-grey" data-test-form-id="frmAboutUs">

    <div class="row valign-wrapper">        
        <div class="col s6 valign">
            <div class="row">
                <div class="col offset-s4 s8">
                    <article id="companyHistory" data-test-company-history>
                        <h1 class="about-header">ABOUT US</h1>
                        <p>
                            Based in Foxford, Co.Mayo, Joyceprint was established in 1994 and have been Print Trade suppliers for over 20 years.
                            As a family-run Irish company, we are widely known for our extensive range of Carbonless NCR products. We offer a
                            wide range of quality products and pride ourselves on providing a friendly and helpful service with fast turnarounds
                            and competitive pricing. Whether you require invoice books, order books, delivery books, receipt books, restaurant
                            books/pads, NCR sets or pads, this is the site to order them.
                            <br/>
                            <br/>
                            Docket books are available in duplicate, triplicate and four part. All standard sizes from A6 to A3 can be purchased
                            and custom sizes are catered for. NCR sets and pads are also available. We ship anywhere within Ireland.
                            <br/>
                            <br/>
                            Our clients are based nationwide and our best form of advertising is, and always has been, recommendations by satisfied
                            customers. We can guarantee our clients total security and confidentiality.
                            <br/>
                            <br/>
                            Thank you for visiting our website. <span class="text-700">Contact us</span> today for a no obligation quote.
                        </p>
                    </article>
                </div>
            </div>
        </div>

        <div class="col s6 valign">
            <img src="~/Content/images/aboutusexample.jpg" alt="Company Story" class="responsive-img" data-test-history-img/>
        </div>
    </div>    

    <div class="row no-pad">
        <div class="col s6">
            <div class="row">
                <div class="col offset-s4 s8">
                    <div id="map" data-test-map></div>
                </div>
            </div>
        </div>

        <div class="col s6">
            <div class="row">
                <article class="col s12" id="companyInformation">
                    <h5 class="primary-text">Joyceprint Ltd.</h5>

                    <address class="about-address" data-test-address-text>
                        Castlebar Road,<br />
                        Foxford, Co Mayo,<br />
                        F26HH50
                    </address>
                    <div>
                        <span class="text-500 primary-text" data-test-email-label>Email</span>
                        <a href="mailto:info@yourdomain.com" title="Click to email us" data-test-email-text>joyceprintitsup@gmail.com</a>
                    </div>
                    <div>
                        <span class="text-500 primary-text" data-test-phone-label>Tel</span>
                        <a href="tel:353949256876" title="Click to call us" data-test-phone-text>+353-94-9256876</a>
                    </div>

                    
                </article>
            </div>
        </div>
    </div>

    <script>
        function initMap() {

            var uluru = { lat: 53.9807771, lng: -9.113247 };
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 8,
                center: uluru
            });
            var marker = new google.maps.Marker({
                position: uluru,
                map: map
            });
        }
    </script>

    <!-- Create a config wrapper and put this in the config file - use an interface-->
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAmlj3x-6ltqflvHZ1CvVjSbgOzERK85e4&callback=initMap"></script>

</section>