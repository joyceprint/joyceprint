@using JoycePrint.Domain.Models
@using JoycePrint.Web.Extensions;

@model QuoteRequest

@{
    ViewBag.Title = "Quote";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var baseBundle = BundleTable.Bundles.GetBundleFor("~/js/joyceprintjs");

    ComposableBundle<Bundle> validationBundle = new Bundle("~/js/validationjs")
                            .AsComposable()
                            .Include("~/Scripts/joyceprint/jalidate.js",
                                "~/Scripts/joyceprint/joyceprint-validation.js"
                            );

    baseBundle.AsComposable().UseBundle(validationBundle);
}

<section id="quote" class="col s12">

    <div class="center-align">
        <h2 class="otherfont">
            Trade Docket Books
        </h2>
    </div>

    <div class="row">

        <div class="col s12 m6 l4 offset-l1">
            @Html.Partial("DocketHelp")
        </div>

        <div class="col s12 m6 l6">
            @using (Html.BeginForm("Index", "Quote", FormMethod.Post, new { required = "true", id = "frm-quote" }))
            {
                @Html.AntiForgeryToken()

                @Html.EditorFor(model => model.Contact, "ContactForm")

                @Html.EditorFor(model => model.DocketBook, "DocketForm")

                <div class="col s10 offset-s1 m5 offset-m1 center">
                    <div class="row">
                        <button class="col s12 btn waves-effect orange" type="reset">CLEAR</button>
                    </div>
                </div>

                <div class="col s10 offset-s1 m5 offset-m1 center">
                    <div class="row">
                        <button class="col s12 btn waves-effect waves-green green" formmethod="post" type="submit">SUBMIT</button>
                    </div>
                </div>
            }
        </div>
    </div>    

    <div class="center-align">
        <h2>
            Delivery To Ireland & The UK
        </h2>
    </div>

</section>