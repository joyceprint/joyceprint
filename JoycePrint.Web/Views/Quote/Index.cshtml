@using JoycePrint.Domain.Models

@model QuoteRequest

@{
    ViewBag.Title = "Quote";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    //BundleConfig.UpdateScriptBundle(BundleTable.Bundles.GetBundleFor("~/js/joyceprintjs"), BundleConfig.PageBundle.Quote);
}

<section id="quote" class="row no-mar-bot light-grey" data-test-form-id="frmQuote">
    
    <h1 class="quote-header center-align">Get A Quote</h1>

    <div class="col no-pad-side offset-s2 s4">
        @Html.Partial("Partial/PrintChecklist")
        
        @Html.Partial("Partial/Map")
    </div>

    <div class="col s5">
        @using (Html.BeginForm("Index", "Quote", FormMethod.Post, new { required = "true", id = "frm-quote" }))
        {
            @Html.AntiForgeryToken()

            @Html.EditorFor(model => model.Contact, "ContactForm")

            @Html.EditorFor(model => model.Enquiry, "EnquiryForm")

            <div class="row no-mar-bot">
                <div class="col s10 offset-s1 m10 offset-m1">
                    <div class="row half">
                        @{ Html.RenderAction("Recaptcha", "Security"); }                        
                    </div>
                </div>
            </div>

            @*
                Change this to be an image - get a security type image
                have the image showing on page load
                when the user scrolls over the images position on the screen display the text using an animation
            *@
            <div class="row half">
                <div class="col s10 offset-s1">
                    <small>We do not share your details with any third parties.</small>
                </div>
            </div>            

            <div class="row">
                <div class="col s10 offset-s1 m5 offset-m1 center">
                    <div class="row">
                        <button class="col s12 btn waves-effect orange" type="reset" data-test-clear>CLEAR</button>
                    </div>
                </div>

                <div class="col s10 offset-s1 m5 offset-m1 center">
                    <div class="row">
                        <button class="col s12 btn waves-effect waves-green green" type="button" data-test-submit>SUBMIT</button>
                    </div>
                </div>                               
            </div>
        }
    </div>

</section>