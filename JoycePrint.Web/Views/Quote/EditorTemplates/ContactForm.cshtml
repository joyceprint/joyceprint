@using JoycePrint.Domain.Models
@model Contact

<section id="contactUs" class="jp-contact-information">

    <div class="col-sm-12 jp-header-container">
        <h3 class="text-primary text-weight-700">Contact Information</h3>
    </div>

    <div class="col-sm-12 col-md-6">
        <div class="form-group">
            <label class="sr-only" for="company">Company</label>
            <div class="col-xs-12">
                <div class="input-group">
                    <span class="input-group-addon" aria-hidden="true">
                        <span class="glyphicon glyphicon-asterisk text-warning" aria-hidden="true"></span>
                    </span>
                    <input type="text" inputmode="latin-prose" class="form-control" id="Contact_Company" name="Contact.Company" placeholder="Company" maxlength="150" autofocus required />
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix visible-sm"></div>

    <div class="col-sm-12 col-md-6">
        <div class="form-group">
            <div class="col-xs-12">
                <label class="sr-only" for="position">Position</label>
                <input type="text" inputmode="latin-prose" class="form-control" id="Contact_Position" name="Contact.Position" placeholder="Position" maxlength="150" />
            </div>
        </div>
    </div>

    <div class="clearfix visible-md visible-sm"></div>

    <div class="col-sm-12 col-md-6">
        <div class="form-group">
            <label class="sr-only" for="name">Name</label>
            <div class="col-xs-12">
                <div class="input-group">
                    <span class="input-group-addon" aria-hidden="true">
                        <span class="glyphicon glyphicon-asterisk text-warning" aria-hidden="true"></span>
                    </span>
                    <input type="text" inputmode="latin-name" class="form-control" id="Contact_Name" name="Contact.Name" placeholder="Name" maxlength="150" required />
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix visible-sm"></div>

    <div class="col-sm-12 col-md-6">
        <div class="form-group">
            <label class="sr-only" for="telephone">Telephone Number</label>
            <div class="col-xs-12">
                <div class="input-group">
                    <span class="input-group-addon" aria-hidden="true">
                        <span class="glyphicon glyphicon-asterisk text-warning" aria-hidden="true"></span>
                    </span>
                    <input type="tel" inputmode="tel" class="form-control" id="Contact_Telephone" name="Contact.Telephone" placeholder="Phone" required />
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix visible-md visible-sm"></div>

    <div class="col-sm-12 col-lg-6">
        <div class="form-group">
            <label class="sr-only" for="email">Email</label>
            <div class="col-xs-12">
                <div class="input-group">
                    <span class="input-group-addon" aria-hidden="true">
                        <span class="glyphicon glyphicon-asterisk text-warning" aria-hidden="true"></span>
                    </span>
                    <input type="email" inputmode="email" class="form-control" id="Contact_Email" name="Contact.Email" placeholder="your@email.com" maxlength="254" required />
                </div>
            </div>
        </div>
    </div>
</section>